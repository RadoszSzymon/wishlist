<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group title">
		<%= f.label :title, class:"title-form" %><br>
		<%= f.text_field :title, class: 'form-control' %><br>
	</div>
	<div class="form-group title">
		<%= f.label :content, class:"content-form" %><br>
		<%= f.bootsy_area :content, editor_options: { image: false, alert_unsaved: false }, class:'form-control' %><br>
	</div>
	<%= f.submit "Submit", class:"btn btn-default" %>
<% end %>
